package com.tigres810.adventurermod.items;

import com.tigres810.adventurermod.Main;
import com.tigres810.adventurermod.init.ModFluids;
import com.tigres810.adventurermod.init.ModItems;
import com.tigres810.adventurermod.util.IHasModel;

import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraftforge.fluids.FluidStack;
import net.minecraftforge.fluids.FluidUtil;

public class ItemExternalAdder extends Item implements IHasModel {

	public ItemExternalAdder() {
		if(FluidUtil.getFilledBucket(new FluidStack(ModFluids.FLUX_FLUID, 1)) != null) {
			ItemStack item = FluidUtil.getFilledBucket(new FluidStack(ModFluids.FLUX_FLUID, 1));
			item.getItem().setCreativeTab(Main.adventurermoditemstab);
			
			ModItems.ITEMS.add(item.getItem());
			System.out.println(ModItems.FLUX_BUCKET.getRegistryName());
		}
	}

	@Override
	public void registerModels() {}
}
